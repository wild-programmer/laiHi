
.content {
  width: 750rpx;
  height: 100%;
}
.content .contentTl {
  width: 25%;
  height: 100%;
  background-color: #dfdfdf ;
  float: left;
  /*padding-top: 90rpx;*/
  box-sizing: border-box;
}
.content .contentTl .ul .li {
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-bottom: 1px solid #d0cdcd;
  color: #9b9b9b;
  font-size: 30rpx;
}
.content .contentTl .ul .li.active {
  background-color: white;
  color: #DB1F57;
}
.content .contentTr {
  padding-top: 80rpx;
  box-sizing: border-box;
  margin-left: 25%;
  height: 100%;
  background-color: white;
}
.content .contentTr .ul .li {
  height: 70rpx;
  line-height: 70rpx;
  text-indent: 30rpx;
  border-bottom: 1px solid #d0cdcd;
  color: #9b9b9b;
  font-size: 25rpx;
  position: relative;
}
.content .contentTr .ul .li::before {
  content: '';
  display: block;
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  right: 0;
  top: 0;
  border: 3rpx solid #9b9b9b;
  border-radius: 50%;
  margin-top: 20rpx;
  margin-right: 20rpx;
}
.content .contentTr .ul .li.activ:before {
  background: url('../../image/Cglog.png') no-repeat;
  background-position: 50%;
  background-size: 15rpx;
  background-color: #DB1F57;
}
